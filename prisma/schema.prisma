datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Group {
  id                  String      @id @default(auto()) @map("_id") @db.ObjectId
  groupId             String      @unique
  subject             String
  subjectOwnerPn      String?
  addressingMode      String?
  size                Int
  creation            Int
  owner               String?
  ownerPn             String?
  owner_country_code  String?
  desc                String?
  descOwner           String?
  descOwnerPn         String?
  descTime            Int?
  linkedParent        String?
  joinApprovalMode    Boolean?    @default(false)    
  restrict            Boolean
  announce            Boolean
  isCommunity         Boolean
  isCommunityAnnounce Boolean
  memberAddMode       Boolean
  participants        Participant[]
  ephemeralDuration   Int?        @default(0)
  settings            Settings
}

type Settings {
  notify              Boolean     @default(false)
  welcome             Boolean     @default(true)
  welcomeMessage      String?
  leave               Boolean     @default(true)
  leaveMessage        String?
  mute                Boolean     @default(false)
  antilink            Antilink    
  antibot             Boolean     @default(false)
  banned              String[]
}

type Participant {
  id          String?
  admin       String?
  lid         String?
  phoneNumber String?
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  userId   String  @unique
  name     String?
  limit    Int         
  role     Role    @default(free)
  expired  Int     @default(0)
  isBanned Boolean @default(false)
  afk      Afk
}

type Afk {
  status Boolean @default(false)
  reason String?
  since  Int?    @default(0)
}

enum Role {
  free
  premium
}

type Antilink {
  status Boolean? @default(false)
  mode   Mode     @default(kick)
  list   AntilinkList[] @default([whatsapp])
}

enum Mode {
  kick
  delete
}

enum AntilinkList {
  youtube
  instagram
  facebook
  whatsapp
  twitter
  tiktok
  all
}

model Session {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  sessionId String  @unique
  session   String?
}

model Admin {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  phoneNumber  String   @unique
  username     String   @unique
  password     String
  lastActivity DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
